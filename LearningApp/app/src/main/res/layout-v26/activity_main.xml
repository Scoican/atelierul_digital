<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/TextAndButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/White"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/TextViewLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/Orange"
                android:gravity="center"
                android:text="@string/this_is_an_orange_text_view"
                android:textAlignment="center"
                android:textColor="@color/White" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/Green"
                android:gravity="center"
                android:text="@string/this_is_an_green_text_view"
                android:textColor="@color/Black" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/Blue"
                android:gravity="center"
                android:text="@string/this_is_an_orange_text_view"
                android:textColor="@color/White" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ButtonsAndIconLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="@dimen/small_dimen_margin"
                android:layout_marginStart="@dimen/small_dimen_margin"
                android:layout_weight="1"
                android:background="@color/Blue"
                android:text="@string/this_is_a_button"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/small_dimen_margin"
                android:layout_weight="1"
                android:contentDescription="@string/image"
                android:src="@drawable/ic_launcher_background" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="@dimen/small_dimen_margin"
                android:layout_marginEnd="@dimen/small_dimen_margin"
                android:layout_weight="1"
                android:background="@color/Green"
                android:text="@string/this_is_a_green_button"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/EditTextLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:background="@color/Yellow"
        android:orientation="vertical">

        <EditText
            android:id="@+id/EditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="@string/this_is_an_edit_text" />

        <EditText
            android:id="@+id/NewEditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="@string/this_is_a_new_edit_text" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/OtherButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/Blue"
        android:orientation="vertical">

    </LinearLayout>


</LinearLayout>