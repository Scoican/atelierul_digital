<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue_gray"
    android:orientation="vertical"
    tools:context=".Activities.ConstraintViewActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_half_constraint_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:background="@color/light_yellow">

        <ImageView
            android:id="@+id/android_1"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/android_image"
            android:src="@mipmap/android_1_foreground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:id="@+id/android_2"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/android_image"
            android:src="@mipmap/android_2_foreground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <View
            android:id="@+id/separator_constraint_activity"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/forest_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_half_constraint_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:background="@color/_light_green">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_medium_main_30"
            android:background="@color/green" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="50dp"
            android:background="@color/pale_violet_red" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="70dp"
            android:background="@color/light_yellow" />

        <ImageView
            android:id="@+id/android_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/android_image"
            android:src="@mipmap/android_3_foreground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>